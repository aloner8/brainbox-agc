version: "3.9"

networks:
  net_web:
    driver: bridge
  net_api:
    driver: bridge
  net_db:
    driver: bridge
  net_admin:
    driver: bridge

services:

  nginx:
    image: nginx:alpine
    container_name: brainbox_nginx
    ports:
      - "81:80"
    volumes:
      - ./frontend/dist/form-mat/browser:/usr/share/nginx/html:ro
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
    networks:
      - net_web
      - net_api
    depends_on:
      - backend
    restart: unless-stopped

  backend:
    build: ./backend
    container_name: brainbox_backend
    expose:
      - "3000"
    environment:
      NODE_ENV: production
      DB_HOST: postgres
      DB_PORT: 5432
      DB_NAME: brainbox
      DB_USER: brainbox
      DB_PASSWORD: 1qaz@WSX
    env_file:
      - ./backend/.env
    networks:
      - net_api
      - net_db
    restart: unless-stopped

  postgres:
    image: postgres:16
    container_name: brainbox_postgres
    expose:
      - "5432"
    environment:
      POSTGRES_DB: brainbox
      POSTGRES_USER: brainbox
      POSTGRES_PASSWORD: brainbox_pass
    volumes:
      - ./database/data:/var/lib/postgresql/data
    networks:
      - net_db
      - net_admin
    restart: unless-stopped

  pgadmin:
    image: dpage/pgadmin4
    container_name: brainbox_pgadmin
    ports:
      - "127.0.0.1:5050:80"
    environment:
      PGADMIN_DEFAULT_EMAIL: aloner8@gmail.com
      PGADMIN_DEFAULT_PASSWORD: 1qaz@WSX
    volumes:
      - ./pgadmin/data:/var/lib/pgadmin
    networks:
      - net_admin
    depends_on:
      - postgres
    restart: unless-stopped
